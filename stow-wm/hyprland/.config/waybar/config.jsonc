{
		// -------------------------------------------------------------------------
		// Global configuration

		"layer": "top",

		"position": "bottom",

		"height": 30,

		"modules-left": [ "mpris", "pulseaudio", "pulseaudio/slider", "privacy" ],
		"modules-center": [ "hyprland/workspaces" ],
		"modules-right": [
			"disk",
			"memory",
			"cpu",
			"power-profiles-daemon",
			"battery",
			"clock#date",
			"clock#time",
			"tray"
		],


		// -------------------------------------------------------------------------
		// Modules
		// -------------------------------------------------------------------------

		"battery": {
			"interval": 10,
			"states": {
				"warning": 30,
				"critical": 15
			},
			"format": "Û∞ö• {icon} ",
			"format-discharging": "Ó´ê {icon} ",
			"format-icons": [
				"ÔâÑ",
				"ÔâÉ",
				"ÔâÇ",
				"ÔâÅ",
				"ÔâÄ" 
			],
			"tooltip": true,
			"tooltip-format": "{capacity}% ({timeTo})"
		},

		"clock#time": {
			"interval": 1,
			"format": "{:%H:%M:%S}",
			"tooltip": false
		},

		"clock#date": {
			"interval": 10,
			"format": "ÔÅ≥  {:%e %b %Y}", // Icon: calendar-alt
			"tooltip-format": "{:%e %B %Y}"
		},

		"cpu": {
			"interval": 5,
			"format": "Ôãõ   {usage}% ({load})", // Icon: microchip
			"states": {
				"warning": 70,
				"critical": 90
			}
		},

		"memory": {
			"interval": 5,
			"format": "Ôî∏  {used}GiB", // Icon: memory
			"states": {
				"warning": 70,
				"critical": 90
			}
		},

		"hyprland/workspaces": {
			"all-outputs": true,
			"disable-scroll": true,
			"format": "{icon}  {name}",
			"format-icons": {
				"1": "Óûï", 
				"2": "Û∞ñü", 
				"3": "ÔåΩ ", 
				"4": "Û∞ìá",
				"5": "ÔãÜ ",
				"6": "ÔÜ∂",
				"7": "ÔçØ",
				"10": "Ó™Å",
				"urgent": "ÔÅ™",
				"focused": "ÔÜí",
				"default": "ÔÑë"
			}
		},

		"pulseaudio": {
			"scroll-step": 2,
			"format": "{icon} ",
			"format-bluetooth": "{icon} ",
			"format-muted": "ÔÄ¶",
			"format-icons": {
				"headphones": "ÔÄ•",
				"handsfree": "Ôäì",
				"headset": "Ôäì",
				"default": ["ÔÄß", "ÔÄ®"]
			},
			"on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
			"on-click-right": "pwvucontrol"
		},

		"pulseaudio/slider": {
			"min": 0,
			"max": 100,
			"orientation": "horizontal"
		},

		"tray": {
			"icon-size": 18,
			"spacing": 1,
			"show-passive-items": true
		},
		"mpris": {
			"format": "{player_icon}    {status_icon} {artist} - {title}  {position} | {length}",
			"format-paused": "{player_icon}  {status_icon} <i>{artist} - {title}  {position} | {length}</i>",
			"player-icons": {
				"default": "",
				"spotify": "Û∞ìá",
				"mpv": "üéµ"
			},
			"status-icons": {
				"playing": "‚ñ∂",
				"paused": "‚è∏"
			},
			"interval": 1,
			"ignored-players": ["firefox"]
		},

		"power-profiles-daemon": {
			"format": " {icon} ",
			"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
			"tooltip": true,
			"format-icons": {
				"default": "ÔÉß",
				"performance": "ÔÉß",
				"balanced": "Ôâé",
				"power-saver": "ÔÅ¨"
			}
		},
		"disk": {
			"interval": 30,
			"format": "Óóø   {free}",
			"path": "/"
		},
		"privacy": {
			"icon-spacing": -2,
			"icon-size": 14,
			"transition-duration": 250,
			"modules": [
				{
					"type": "screenshare",
					"tooltip": true,
					"tooltip-icon-size": 14
				},
				{
					"type": "audio-out",
					"tooltip": true,
					"tooltip-icon-size": 14
				},
				{
					"type": "audio-in",
					"tooltip": true,
					"tooltip-icon-size": 14
				}
			]
		}
}


