		"memory": {
			"interval": 5,
			"format": "ï”¸  {used} | {total} GiB", // Icon: memory
			"states": {
				"warning": 70,
				"critical": 90
			}
		},

		"hyprland/workspaces": {
			"all-outputs": true,
			"disable-scroll": true,
			"format": "{icon}  {name}",
			"format-icons": {
