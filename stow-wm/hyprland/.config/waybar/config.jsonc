		"pulseaudio/slider": {
			"min": 0,
			"max": 100,
			"orientation": "horizontal"
		},

		"tray": {
			"icon-size": 18,
			"spacing": 1
		},
		"mpris": {
			"format": "{status_icon} {artist} - {title}  {position} | {length}  {player_icon} ",
