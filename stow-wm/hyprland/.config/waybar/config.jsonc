// =============================================================================
//
// Waybar configuration
//
// Configuration reference: https://github.com/Alexays/Waybar/wiki/Configuration
//
// =============================================================================

{
		// -------------------------------------------------------------------------
		// Global configuration

		"layer": "top",

		"position": "bottom",

		"height": 30,

		"modules-left": [ "mpris", "pulseaudio", "pulseaudio/slider" ],
		"modules-center": [ "hyprland/workspaces" ],
		"modules-right": [
			"disk",
			"memory",
			"cpu",
			"power-profiles-daemon",
			"battery",
			"clock#date",
			"clock#time",
			"tray"
		],


		// -------------------------------------------------------------------------
		// Modules
		// -------------------------------------------------------------------------

		"battery": {
			"interval": 10,
			"states": {
				"warning": 30,
				"critical": 15
			},
			"format": "󰚥 {icon} ",
			"format-discharging": " {icon} ",
			"format-icons": [
				"",
				"",
				"",
				"",
				"" 
			],
			"tooltip": true,
			"tooltip-format": "{capacity}% ({timeTo})"
		},

		"clock#time": {
			"interval": 1,
			"format": "{:%H:%M:%S}",
			"tooltip": false
		},

		"clock#date": {
			"interval": 10,
			"format": "  {:%e %b %Y}", // Icon: calendar-alt
			"tooltip-format": "{:%e %B %Y}"
		},

		"cpu": {
			"interval": 5,
			"format": "   {usage}% ({load})", // Icon: microchip
			"states": {
				"warning": 70,
				"critical": 90
			}
		},

		"memory": {
			"interval": 5,
			"format": "  {used} | {total} GiB", // Icon: memory
			"states": {
				"warning": 70,
				"critical": 90
			}
		},

		"hyprland/workspaces": {
			"all-outputs": true,
			"disable-scroll": true,
			"format": "{icon}  {name}",
			"format-icons": {
				"1": "", 
				"2": "󰖟", 
				"3": "", 
				"4": "󰓇",
				"5": " ",
				"6": "",
				"7": "",
				"10": "",
				"urgent": "",
				"focused": "",
				"default": ""
			}
		},

		"pulseaudio": {
			 "scroll-step": 2,
			 "format": "{icon} ",
			 "format-bluetooth": "{icon} ",
			 "format-muted": "",
			 "format-icons": {
				 "headphones": "",
				 "handsfree": "",
				 "headset": "",
				 "default": ["", ""]
			 },
			 "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
			 "on-click-right": "pwvucontrol"
		},

		"pulseaudio/slider": {
			"min": 0,
			"max": 100,
			"orientation": "horizontal"
		},

		"tray": {
			"icon-size": 18,
			"spacing": 1
		},
		"mpris": {
			"format": "{status_icon} {artist} - {title}  {position} | {length}  {player_icon} ",
			"format-paused": "{status_icon} <i>{artist} - {title}  {position} | {length}</i> {player_icon} ",
			"player-icons": {
				"default": "",
				"spotify": "󰓇",
				"mpv": "🎵"
			},
			"status-icons": {
				"playing": "▶",
				"paused": "⏸"
			},
			"interval": 1,
			"ignored-players": ["firefox"]
		},

		"power-profiles-daemon": {
			"format": " {icon} ",
			"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
			"tooltip": true,
			"format-icons": {
				"default": "",
				"performance": "",
				"balanced": "",
				"power-saver": ""
			}
		},
		"disk": {
    "interval": 30,
    "format": "    {free}",
    "path": "/"
}
}


