{
		// -------------------------------------------------------------------------
		// Global configuration

		"layer": "top",

		"position": "bottom",

		"height": 30,

		"modules-left": [ "mpris", "pulseaudio", "pulseaudio/slider" ],
		"modules-center": [ "hyprland/workspaces" ],
		"modules-right": [
			"disk",
			"memory",
			"cpu",
			"power-profiles-daemon",
			"battery",
			"clock#date",
			"clock#time",
			"tray"
		],


		// -------------------------------------------------------------------------
		// Modules
		// -------------------------------------------------------------------------

		"battery": {
			"interval": 10,
			"states": {
				"warning": 30,
				"critical": 15
			},
