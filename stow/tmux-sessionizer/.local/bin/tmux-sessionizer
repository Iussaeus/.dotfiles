#!/usr/bin/env bash

select_dir() {
    sessions=()
    if ! [[ -z $(pgrep tmux) ]]; then
        IFS=$'\n' read -d '' -r -a sessions < <(tmux list-sessions -F "#S" | tr _ .)
    fi

    paths=()
    while IFS= read -r dir; do
        dir_name=$(basename "$dir")
        if [[ " ${sessions[*]} " == *" $dir_name "* ]]; then
            paths+=("[TMUX]$dir")
        else
            paths+=("$dir")
        fi
    done < <(find ~/code -mindepth 1 -maxdepth 1 -type d)

    selected=$(printf "%s\n" "${paths[@]}" | sort -r | fzf)

    selected="${selected/"[TMUX]"/}"
    selected="${selected/" "/}"
    echo $selected
}

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(select_dir)
fi

if [[ -z $selected ]]; then
    exit 0
fi

cmd=""

if [[ -z $TMUX ]]; then
    cmd="tmux attach"
else
    cmd="tmux switch-client"
fi
    

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

if [[ -z $tmux_running ]]; then
    tmux & disown
fi

if ! tmux has-session -t=$selected_name 2> /dev/null; then
    tmux new-session -ds $selected_name -c "$selected"
    tmux new-window -c $selected -t "$selected_name:1"
    tmux send-keys -t "$selected_name:1" "nvim ." C-m
    tmux select-window -t 0
fi

$cmd -t "$selected_name"
